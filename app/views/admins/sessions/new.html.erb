<section class='h-[500px] '>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:'form'}) do |f| %>
        <div>
          <h2 class="">Entrar como Admin</h2>
          <div class="field py-3 ">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field py-3 pb-5">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password"%>
          </div>

          <!--
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %> 
          -->
          
          <div class="btn-primary actions w-full">
            <%= f.submit "Entrar", class: 'cursor-pointer' %>
          </div>
          <div class="btn-second actions w-full">
            <%= render "admins/shared/links", class: 'cursor-pointer' %>
          </div>
            
        </div>
          
      <% end %>          
</section>
