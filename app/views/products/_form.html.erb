<%= form_with model: @product, data: { turbo: false } do |f|  %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:name).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :brand %>
    <%= f.text_field :brand%>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:brand).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :category_id, 'Categorias' %>
    <%= f.collection_select :category_id, @categories, :id, :name, { prompt: '[Sem categoria relacionada]'} %>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:categories).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description%>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:description).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :sku %>
    <%= f.text_field :sku%>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:sku).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :width %>
    <%= f.number_field :width%>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:width).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :height  %>
    <%= f.number_field :height %>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:height).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :depth  %>
    <%= f.number_field :depth %>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:depth).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :weight  %>
    <%= f.number_field :weight %>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:weight).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :shipping_price  %>
    <%= f.number_field :shipping_price %>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:shipping_price).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :fragile  %>
    <%= f.check_box :fragile %>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:fragile).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :manual  %>
    <%= f.text_field :manual %>
    <% if @product.errors.any?%>
      <p class=' text-red-600'><%= @product.errors.full_messages_for(:manual).first %></p>
    <% end %>
  </div>

  <div>
    <%= f.submit 'Cadastrar' %>
  </div>
  
<% end %>