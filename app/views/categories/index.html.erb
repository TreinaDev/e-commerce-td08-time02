<h2><%= I18n.t('activerecord.models.category.other') %></h2>
<% if @categories.any? %>
  <div class="categories-wrapper">
    <% @categories.each do |category| %>
      <div class="category">
          <%= link_to category.name, category %>
      </div>
    <% end %>
  </div>
<% else %>
  <div>Não há categorias cadastradas</div>
<% end %>
<br />
<div>
  <%= link_to 'Criar Categoria', new_category_path %>
</div>
